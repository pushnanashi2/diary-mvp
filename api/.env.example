# ==================================================
# Diary MVP - Environment Configuration Template
# ==================================================

# ----- Application -----
NODE_ENV=development
PORT=3000

# ----- Database (MySQL) -----
# Option 1: Use DATABASE_URL (recommended)
DATABASE_URL=mysql://diary:diary_password@127.0.0.1:3306/diary

# Option 2: Use individual variables (fallback)
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_USER=diary
MYSQL_PASSWORD=diary_password
MYSQL_DB=diary

# Database Pool Configuration
DB_POOL_SIZE=10

# ----- Redis -----
REDIS_URL=redis://127.0.0.1:6379

# ----- MinIO (S3-compatible storage) -----
MINIO_ENDPOINT=127.0.0.1
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=diary-audio

# ----- Authentication -----
# IMPORTANT: Generate a strong random secret for production
# Example: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ----- OpenAI API -----
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-key-here

# ----- Rate Limiting -----
RL_ENTRIES_PER_MIN=30
RL_SUMMARIES_PER_MIN=20

# ----- Audio Upload -----
MAX_AUDIO_BYTES=26214400  # 25MB

# ----- Public URLs -----
PUBLIC_BASE_URL=http://localhost:3000

# ----- Logging -----
LOG_LEVEL=INFO  # DEBUG, INFO, WARN, ERROR
