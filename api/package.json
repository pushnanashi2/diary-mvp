{
  "name": "diary-mvp-api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "NODE_ENV=test jest --coverage --detectOpenHandles",
    "test:unit": "NODE_ENV=test jest --testPathPattern=unit --coverage",
    "test:integration": "NODE_ENV=test jest --testPathPattern=integration --coverage",
    "test:e2e": "NODE_ENV=test jest --testPathPattern=e2e --runInBand",
    "test:watch": "NODE_ENV=test jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-validator": "^7.0.1",
    "file-type": "^19.0.0",
    "jsonwebtoken": "^9.0.2",
    "minio": "^8.0.5",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.11.0",
    "qrcode": "^1.5.3",
    "redis": "^4.6.10",
    "speakeasy": "^2.0.0",
    "ulid": "^2.3.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/tests/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
