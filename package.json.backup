{
  "name": "diary-mvp",
  "version": "2.0.0",
  "description": "Advanced AI-powered diary application with comprehensive features",
  "main": "api/server.js",
  "scripts": {
    "start": "node api/server.js",
    "dev": "nodemon api/server.js",
    "test": "jest --coverage --forceExit",
    "test:unit": "jest tests/api/unit --coverage",
    "test:integration": "jest tests/api/integration --coverage",
    "test:e2e": "jest tests/api/e2e --coverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=text --coverageReporters=lcov --forceExit",
    "test:ci": "jest --ci --coverage --maxWorkers=2 --forceExit",
    "lint": "eslint api/ tests/ --ext .js || true",
    "lint:fix": "eslint api/ tests/ --fix --ext .js",
    "migrate": "node api/scripts/migrate.js",
    "migrate:test": "NODE_ENV=test node api/scripts/migrate.js"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "api/**/*.js",
      "!api/server.js",
      "!api/scripts/**",
      "!api/config/database.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/worker/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testTimeout": 30000
  },
  "keywords": [
    "diary",
    "journal",
    "ai",
    "analytics",
    "emotional-intelligence"
  ],
  "author": "PushNaNaShi",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "ulid": "^2.3.0",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.2",
    "eslint": "^8.55.0"
  }
}
