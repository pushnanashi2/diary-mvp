{
  "name": "diary-mvp",
  "version": "2.0.0",
  "description": "Advanced AI-powered diary application with MySQL, Redis, and comprehensive features",
  "main": "api/server.js",
  "type": "module",
  "scripts": {
    "start": "node api/server.js",
    "dev": "nodemon api/server.js",
    "migrate": "node api/scripts/migrate.js",
    "migrate:test": "NODE_ENV=test node api/scripts/migrate.js",
    "test": "jest --coverage --forceExit",
    "test:unit": "jest tests/api/unit --coverage",
    "test:integration": "jest tests/api/integration --coverage",
    "test:e2e": "jest tests/api/e2e --coverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=text --coverageReporters=lcov --forceExit",
    "test:ci": "jest --ci --coverage --maxWorkers=2 --forceExit",
    "lint": "eslint api/ tests/ --ext .js || true",
    "lint:fix": "eslint api/ tests/ --fix --ext .js"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "api/**/*.js",
      "!api/server.js",
      "!api/scripts/**",
      "!api/config/database.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/worker/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testTimeout": 30000
  },
  "keywords": [
    "diary",
    "journal",
    "ai",
    "mysql",
    "redis",
    "analytics",
    "emotional-intelligence"
  ],
  "author": "PushNaNaShi",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "minio": "^7.1.3",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.16.0",
    "redis": "^4.6.10",
    "ulid": "^2.3.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
